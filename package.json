{
  "name": "stream-string",
  "description": "\"Converts\" a stream to a string. Promises are used by default, callbacks are allowed as well.",
  "version": "2.0.3",
  "author": "James Costian <james@jamescostian.com>",
  "bugs": {
    "url": "https://github.com/jamescostian/stream-string/issues"
  },
  "devDependencies": {
    "coveralls": "^3.0.9",
    "jest": "^24.9.0",
    "snazzy": "^8",
    "standard": "^14"
  },
  "homepage": "https://github.com/jamescostian/stream-string",
  "jest": {
    "testURL": "http://localhost/",
    "testRegex": "tests\\.js$",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "collectCoverageFrom": [
      "index.js"
    ],
    "collectCoverage": true
  },
  "keywords": [
    "convert",
    "stream"
  ],
  "license": "ISC",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamescostian/stream-string.git"
  },
  "scripts": {
    "coveralls": "cat coverage/lcov.info | coveralls",
    "pretest": "standard | snazzy",
    "test": "jest"
  },
  "standard": {
    "env": [
      "jest"
    ]
  }
}
